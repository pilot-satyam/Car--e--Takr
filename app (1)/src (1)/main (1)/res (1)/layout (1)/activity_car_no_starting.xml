<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".car_no_starting">

    <ScrollView
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="1700dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:autoPlay="true"
                app:showFullScreenButton="false"
                app:videoId="fRfPupikHT4" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="425dp"
                android:layout_height="1500dp"
                app:srcCompat="@drawable/unnamed" />

            <Button
                android:id="@+id/call_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="@drawable/button_round"
                android:onClick="Location_pune"
                android:text="CALL MECHANIC ?"
                android:textColor="#ffffff"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>