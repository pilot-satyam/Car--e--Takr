<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flat_tyre"
    android:background="@drawable/gradient_backgrounf"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:videoId="6T-rmhXUR8o"
                app:autoPlay="true"
                android:id="@+id/youtube_player_view0"
                app:showFullScreenButton="false"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="500dp"

                android:background="#C4C4C4"
                app:srcCompat="@drawable/flat_tyre_info1_new"
                />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:background="#8BC34A"
                app:srcCompat="@drawable/flat_tyre_info2_new" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "CALL MECHANIC ?"
                android:layout_marginLeft="155dp"
                android:onClick="Location_pune"
                android:background="@drawable/button_round"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>