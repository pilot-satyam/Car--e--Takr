<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeandModel"
    android:background="@drawable/gradient_backgrounf">


    <ImageView
        android:id="@+id/caretaker"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        app:srcCompat="@drawable/logo_main_2"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/text_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"

        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose Make"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:padding="5dp"/>

    <Spinner
        android:id="@+id/makeandmodel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_below="@+id/text_make"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/text_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeandmodel"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose Model"
        android:layout_marginLeft="81dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/edit_round"
        android:padding="5dp"
        />

    <Spinner
        android:id="@+id/makeandmodel2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_model"

        android:background="@android:drawable/btn_dropdown"
        />
    <Button
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:text="CONTINUE"
        android:id="@+id/Continue"
        android:layout_below="@+id/makeandmodel2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_round"
        android:onClick="Servicingorbreakdown"
        android:textColor="#ffffff"/>





</RelativeLayout>