<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permissions"
    android:background="@drawable/gradient_backgrounf">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permissioncontact"
        android:text="Grant Permssions"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_round"
        android:elevation="5dp"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_main_2"
        android:background="@drawable/edit_round"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextbutton"
        android:text="CONTINUE"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_round"
        android:layout_below="@+id/permissioncontact"
        android:layout_marginTop="50dp"
        android:onClick="MakeandModel"
        android:textColor="#ffffff"
        android:visibility="gone"
        />


</RelativeLayout>