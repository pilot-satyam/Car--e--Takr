<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Servicingorbreakdown"
    android:background="#C4C4C4">


    <ImageButton
        android:id="@+id/servicing"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginTop="120dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#2F9EBD"
        android:tint="#00A71A1A"
        app:srcCompat="@drawable/service"
        android:onClick="servicing"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="SERVICING"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25dp"
        android:background="@drawable/edit_round"/>

    <ImageButton
        android:id="@+id/breakdwon"
        android:layout_width="387dp"
        android:layout_height="239dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00F1EFEF"
        android:onClick="Issue1"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        android:tint="#00A09D9D"
        app:srcCompat="@drawable/breakdown" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="BREAKDOWN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25dp"
        android:background="@drawable/edit_round"/>


</LinearLayout>